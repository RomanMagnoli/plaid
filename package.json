{
  "name": "plaid",
  "productName": "Plaid",
  "version": "0.2.1",
  "author": {
    "name": "Piotr Marczy≈Ñski",
    "email": "piotmski@gmail.com"
  },
  "description": "Get a better overview of your Jira work log",
  "keywords": [
    "jira",
    "work log",
    "planner",
    "calendar"
  ],
  "license": "MIT",
  "homepage": "https://github.com/piotrmski/plaid",
  "main": "main.js",
  "build": {
    "appId": "com.github.piotrmski.plaid",
    "files": [
      "main.js",
      "build"
    ],
    "win": {
      "icon": "build/assets/appicon/icon.ico",
      "extraFiles": [
        {
          "from": "src/assets/Plaid.VisualElementsManifest.xml",
          "to": "Plaid.VisualElementsManifest.xml"
        }
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "assets/appicon/icon.png"
    }
  },
  "scripts": {
    "ng": "ng",
    "serve-dev": "ng serve --port 4300",
    "start-dev": "electron main-dev.js",
    "start": "electron main.js",
    "build": "ng build --prod",
    "package": "electron-builder",
    "publish": "electron-builder --publish always",
    "lint": "ng lint"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "~9.0.1",
    "@angular/common": "~9.0.1",
    "@angular/compiler": "~9.0.1",
    "@angular/core": "~9.0.1",
    "@angular/forms": "~9.0.1",
    "@angular/platform-browser": "~9.0.1",
    "@angular/platform-browser-dynamic": "~9.0.1",
    "@angular/router": "~9.0.1",
    "@openfonts/comfortaa_latin": "^1.44.3",
    "@openfonts/source-sans-pro_all": "^1.44.0",
    "electron-updater": "^4.2.0",
    "mousetrap": "^1.6.5",
    "ngx-electron": "~2.2.0",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.900.2",
    "@angular/cli": "^9.0.2",
    "@angular/compiler-cli": "~9.0.1",
    "@angular/language-service": "~9.0.1",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "electron": "^8.0.1",
    "electron-builder": "^22.3.2",
    "ts-node": "~8.6.2",
    "tslint": "~5.20.1",
    "typescript": "~3.7.5"
  }
}
