{
  "name": "plaid",
  "productName": "Plaid",
  "version": "0.2.0",
  "author": {
    "name": "Piotr Marczy≈Ñski",
    "email": "piotmski@gmail.com"
  },
  "description": "Get a better overview of your Jira work log",
  "keywords": [
    "jira",
    "work log",
    "planner",
    "calendar"
  ],
  "license": "MIT",
  "homepage": "https://github.com/piotrmski/plaid",
  "main": "main.js",
  "build": {
    "appId": "com.github.piotrmski.plaid",
    "files": [
      "main.js",
      "build"
    ],
    "win": {
      "icon": "build/assets/icon/icon.ico",
      "extraFiles": [
        {
          "from": "src/assets/Plaid.VisualElementsManifest.xml",
          "to": "Plaid.VisualElementsManifest.xml"
        }
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "assets/icon/icon.png"
    }
  },
  "scripts": {
    "ng": "ng",
    "serve-dev": "ng serve --port 4300",
    "start-dev": "electron main-dev.js",
    "start": "electron main.js",
    "build": "ng build --prod",
    "package": "electron-builder",
    "publish": "electron-builder --publish always",
    "lint": "ng lint"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "~8.2.14",
    "@angular/common": "~8.2.14",
    "@angular/compiler": "~8.2.14",
    "@angular/core": "~8.2.14",
    "@angular/forms": "~8.2.14",
    "@angular/platform-browser": "~8.2.14",
    "@angular/platform-browser-dynamic": "~8.2.14",
    "@angular/router": "~8.2.14",
    "@openfonts/comfortaa_latin": "^1.44.2",
    "@openfonts/source-sans-pro_all": "^1.44.0",
    "electron-updater": "^4.2.0",
    "mousetrap": "^1.6.3",
    "ngx-electron": "~2.2.0",
    "rxjs": "~6.5.4",
    "tslib": "~1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.22",
    "@angular/cli": "~8.3.22",
    "@angular/compiler-cli": "~8.2.14",
    "@angular/language-service": "~8.2.14",
    "@types/node": "~12.12.24",
    "codelyzer": "^5.2.1",
    "electron": "^7.1.9",
    "electron-builder": "^22.2.0",
    "ts-node": "~8.6.2",
    "tslint": "~5.20.1",
    "typescript": "~3.5.3"
  }
}
